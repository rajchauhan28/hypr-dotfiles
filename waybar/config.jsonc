{
  "position": "top",
  "height": 30,
  "spacing": 3,

  "modules-left": [
    "custom/media",
    "custom/media_prev",
    "custom/media_toggle",
    "custom/media_next",
    "hyprland/window"
  ],

  "modules-center": [
    "hyprland/workspaces"
  ],

  "modules-right": [
    
    "custom/wifi",
    "custom/bluetooth",
    "pulseaudio",
    "clock",
    "tray",
    "custom/brightness",
    "power-profiles-daemon",
    "custom/system",
    "battery",
    "custom/power"
  ],

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "१", "2": "२", "3": "३", "4": "४", "5": "५",
      "6": "६", "7": "७", "8": "८", "9": "९", "10": "०४",
      "urgent": "",
      "focused": "",
      "default": ""
    }
  },

  "custom/media": {
    "format": "{icon} {text}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "",
      "firefox": "",
      "default": "🎜"
    },
    "exec": "$HOME/.config/waybar/mediaplayer.py",
    "interval": 2
  },

  "custom/media_prev": {
    "format": "⏮",
    "on-click": "playerctl previous",
    "tooltip": "Previous Track"
  },
  "custom/media_toggle": {
    "format": "⏯",
    "on-click": "playerctl play-pause",
    "tooltip": "Play/Pause"
  },
  "custom/media_next": {
    "format": "⏭",
    "on-click": "playerctl next",
    "tooltip": "Next Track"
  },

  "custom/system": {
    "exec": "$HOME/.config/waybar/scripts/system_status.sh",
    "return-type": "json",
    "interval": 2,
    "tooltip": false
  },

  "custom/wifi": {
    "format": "",
    "tooltip": "Open Network Manager",
    "on-click": "kitty -e nmtui"
  },

  "custom/bluetooth": {
  "format": "",
  "tooltip": false,
  "on-click": "pypr toggle bluetuith"
},

  "pulseaudio": {
    "format": "{volume}% {icon} {format_source}",
    "format-bluetooth": "{volume}% {icon} {format_source}",
    "format-bluetooth-muted": " {icon} {format_source}",
    "format-muted": " {format_source}",
    "format-source": "{volume}% ",
    "format-source-muted": "",
    "format-icons": {
      "default": ["", "", ""]
    },
    "on-click": "pavucontrol"
  },

  "custom/brightness": {
  "format": "{}",
  "return-type": "json",
  "exec": "~/.config/waybar/scripts/brightnesscontrol.sh",
  "interval": 2,
  "on-scroll-up": "~/.config/waybar/scripts/brightnesscontrol.sh -o i",
  "on-scroll-down": "~/.config/waybar/scripts/brightnesscontrol.sh -o d"
},

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% ",
    "format-plugged": "{capacity}% ",
    "format-alt": "{time} {icon}",
    "format-icons": ["", "", "", "", ""]
  },

  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },

  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "",
      "performance": "",
      "balanced": "",
      "power-saver": ""
    }
  },

  "tray": {
    "spacing": 8
  },

  "custom/power": {
    "format": "⏻",
    "tooltip": false,
    "on-click": "wlogout -b 2",
    "interval": 3600
  }
}
