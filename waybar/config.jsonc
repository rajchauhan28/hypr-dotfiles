{
  "position": "top",
  "height": 30,
  "spacing": 3,

  "modules-left": [
    "custom/media",
    "custom/media_prev",
    "custom/media_toggle",
    "custom/media_next",
    "hyprland/window"
  ],

  "modules-center": [
    "hyprland/workspaces"
  ],

  "modules-right": [
    
    "custom/wifi",
    "custom/bluetooth",
    "pulseaudio",
    "clock",
    "tray",
    "custom/brightness",
    "power-profiles-daemon",
    "custom/system",
    "battery",
    "custom/power"
  ],

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "à¥§", "2": "à¥¨", "3": "à¥©", "4": "à¥ª", "5": "à¥«",
      "6": "à¥¬", "7": "à¥­", "8": "à¥®", "9": "à¥¯", "10": "à¥¦à¥ª",
      "urgent": "ïª",
      "focused": "ï†’",
      "default": "ï„‘"
    }
  },

  "custom/media": {
    "format": "{icon} {text}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ï†¼",
      "firefox": "ï‰©",
      "default": "ğŸœ"
    },
    "exec": "$HOME/.config/waybar/mediaplayer.py",
    "interval": 2
