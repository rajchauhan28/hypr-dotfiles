  "custom/media_toggle": {
    "format": "â¯",
    "on-click": "playerctl play-pause",
    "tooltip": "Play/Pause"
  },
  "custom/media_next": {
    "format": "â­",
    "on-click": "playerctl next",
    "tooltip": "Next Track"
  },

  "custom/system": {
    "exec": "$HOME/.config/waybar/scripts/system_status.sh",
    "return-type": "json",
    "interval": 2,
    "tooltip": false
  },

  "custom/wifi": {
    "format": "ï‡«",
    "tooltip": "Open Network Manager",
    "on-click": "kitty -e nmtui"
  },

  "custom/bluetooth": {
  "format": "ïŠ”",
  "tooltip": false,
  "on-click": "pypr toggle bluetuith"
},

  "pulseaudio": {
    "format": "{volume}% {icon} {format_source}",
    "format-bluetooth": "{volume}% {icon}ïŠ” {format_source}",
    "format-bluetooth-muted": "ïš© {icon}ïŠ” {format_source}",
    "format-muted": "ïš© {format_source}",
    "format-source": "{volume}% ï„°",
    "format-source-muted": "ï„±",
    "format-icons": {
      "default": ["ï€¦", "ï€§", "ï€¨"]
    },
    "on-click": "pavucontrol"
  },

  "custom/brightness": {
  "format": "{}",
  "return-type": "json",
  "exec": "~/.config/waybar/scripts/brightnesscontrol.sh",
  "interval": 2,
  "on-scroll-up": "~/.config/waybar/scripts/brightnesscontrol.sh -o i",
  "on-scroll-down": "~/.config/waybar/scripts/brightnesscontrol.sh -o d"
},

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% ï—§",
    "format-plugged": "{capacity}% ï‡¦",
    "format-alt": "{time} {icon}",
    "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
  },

  "clock": {
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "{:%Y-%m-%d}"
  },

  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ïƒ§",
      "performance": "ïƒ§",
      "balanced": "ï‰",
      "power-saver": "ï¬"
