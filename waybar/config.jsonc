// -*- mode: jsonc -*-
{
    "position": "top",
    "height": 30,
    "spacing": 3,

    "modules-left": [
    "hyprland/workspaces",
    "custom/media_controls",
	
        
        
    ],

    "modules-center": [
		
		"hyprland/window"
        
    ],

    "modules-right": [
        "custom/bluetooth",
        "custom/wifi",
        "pulseaudio",
        "cpu",
        "memory",
        "temperature",
        "custom/brightness",
        "battery",
        "clock",
        "tray",
        "power-profiles-daemon",
        "custom/power"
    ],

    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
                "1": "à¥§",
                "2": "à¥¨",
                "3": "à¥©",
                "4": "à¥ª",
                "5": "à¥«",
                "6": "à¥¬",
                "7": "à¥­",
                "8": "à¥®",
                "9": "à¥¯",
                "10": "à¥§à¥¦",
            "urgent": "ïª",
            "focused": "ï†’",
            "default": "ï„‘"
        }
    },

    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ï†¼",
            "default": "ğŸœ"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null"
    },

    // ------- Custom Bluetooth and Wifi Module -------
    "custom/bluetooth": {
    "format": "{}",
    "return-type": "json",
    "interval": 10,
    "exec": "~/.config/waybar/scripts/bluetooth_status.sh",
    "on-click": "~/.config/waybar/scripts/bluetooth_popup.sh"
    },
    "custom/wifi": {
        "format": "{}",
        "return-type": "json",
        "interval": 10,
        "exec": "~/.config/waybar/scripts/wifi_status.sh",
        "on-click": "~/.config/waybar/scripts/wifi_popup.sh",
        "tooltip": true
    },
    "custom/media_controls": {
        "format": "{}",
        "return-type": "json",
        "exec": "~/.config/waybar/scripts/media_controls.sh",
        "interval": 1,
        // Left click: play/pause
        "on-click": "playerctl play-pause",
        // Right click: next
        "on-click-right": "playerctl next",
        // Middle click: previous
        "on-click-middle": "playerctl previous"
    },
	"custom/brightness": {
	  "exec": "~/.config/waybar/scripts/brightness-control.sh",
	  "interval": 2,
	  "on-scroll-up": "~/.config/waybar/scripts/brightness-control.sh -o i",
	  "on-scroll-down": "~/.config/waybar/scripts/brightness-control.sh -o d",
	  "return-type": "json"
	},
	
    // ------- Right Side Modules --------
    "mpd": {
        "format": "{stateIcon} {artist} - {title} ï€",
        "format-disconnected": "Disconnected ï€",
        "state-icons": {
            "paused": "ïŒ",
            "playing": "ï‹"
        },
        "tooltip-format": "{album}\n{elapsedTime:%M:%S}/{totalTime:%M:%S}",
        "unknown-tag": "N/A",
        "interval": 5
    },

    "tray": {
        "spacing": 8
    },

    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },

    "cpu": {
        "format": "{usage}% ï‹›",
        "tooltip": true
    },

    "memory": {
        "format": "{}% ïƒ‰",
        "tooltip": true
    },

    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}Â°C {icon}",
        "format-icons": ["ï«", "ï‹‰", "ï©"]
    },

    "backlight": {
      "device": "intel_backlight",
      "format": "{percent}% {icon}",
      "format-icons": ["î", "î“", "î‘", "î", "î", "î", "îŠ", "îˆ", "î›"],
      "exec": "~/.config/waybar/scripts/brightnesscontrol.sh"
    },

    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ï—§",
        "format-plugged": "{capacity}% ï‡¦",
        "format-alt": "{time} {icon}",
        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
    },

    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ïƒ§",
            "performance": "ïƒ§",
            "balanced": "ï‰",
            "power-saver": "ï¬"
        }
    },

    "pulseaudio": {
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}ïŠ” {format_source}",
        "format-bluetooth-muted": "ïš© {icon}ïŠ” {format_source}",
        "format-muted": "ïš© {format_source}",
        "format-source": "{volume}% ï„°",
        "format-source-muted": "ï„±",
        "format-icons": {
            "default": ["ï€¦", "ï€§", "ï€¨"]
        },
        "on-click": "pavucontrol"
    },

    // ------- Power Custom -------
    "custom/power": {
        "format": "â»",
        "tooltip": false,
        "on-click": "wlogout -b 2",
        "interval": 3600
    }
}

